# .env - Environment Configuration for Document QA Application

# ============================================
# Weaviate Configuration
# ============================================
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_API_KEY=

# ============================================
# Ollama Configuration
# ============================================
OLLAMA_BASE_URL=http://ollama:11434
LLM_MODEL=llama3.2
LLM_TEMPERATURE=0.3
LLM_TOP_P=0.9
LLM_REPEAT_PENALTY=1.1

# ============================================
# Embedding Model
# ============================================
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ============================================
# Document Processing
# ============================================
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_DOCUMENTS=100

# ============================================
# Application Settings
# ============================================
LOG_LEVEL=INFO
DEBUG=False
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ============================================
# API Settings
# ============================================
API_TITLE=Document QA API
API_VERSION=1.0.0
API_DESCRIPTION=AI-powered document question answering using RAG

# ============================================
# Vector Search Settings
# ============================================
RETRIEVAL_TOP_K=4
SIMILARITY_THRESHOLD=0.7

# ============================================
# Agent Settings
# ============================================
MAX_ITERATIONS=5
AGENT_TIMEOUT=120

# ============================================
# Optional: Authentication (if needed later)
# ============================================
# API_KEY=your-secret-api-key-here
# SECRET_KEY=your-secret-signing-key-here
